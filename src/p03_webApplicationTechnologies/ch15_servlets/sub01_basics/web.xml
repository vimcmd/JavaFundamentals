<web-app
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        id="WebApp_ID" version="2.5">
    <display-name>First Project</display-name>
    <servlet>
        <display-name>FirstServletDisplayName</display-name>
        <servlet-name>FirstServletNameInDescriptor</servlet-name>
        <servlet-class>p03_webApplicationTechnologies.ch15_servlets.sub01_basics.FirstServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirstServletNameInDescriptor</servlet-name>
        <url-pattern>/FirstServletTestDescriptor</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>